@page
@model ZemogaPost.WebApplication.Pages.BlogList.CreateModel
@{
}
<br />
<h2 class="text-info">Create New Post</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Post.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Post.Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Post.Content"></label>
            </div>
            <div class="col-6">
                <input asp-for="Post.Content" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
               <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
               <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>