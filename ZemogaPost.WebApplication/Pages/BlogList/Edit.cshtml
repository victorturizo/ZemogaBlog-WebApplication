@page
@model ZemogaPost.WebApplication.Pages.BlogList.EditModel
@{
}

<br />
<h2 class="text-info">Edit Post</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Post.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Post.Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Post.Content"></label>
            </div>
            <div class="col-6">
                <input asp-for="Post.Content" class="form-control" />
            </div>
        </div>
        @if (Model.userValidator.Profile == "Admin")
        {
            <div class="form-group row">
                <div class="col-1 p-0 m-0 no-gutters ">
                    <label asp-for="Post.Approved"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Post.Approved" class="form-control" />
                </div>
            </div>
        }

    <div class="form-group row">

        @if (Model.userValidator.Profile == "Admin" || Model.userValidator.Profile == "Writer")
        {
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
        }

        <div class="col-3">
            <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
        </div>
    </div>
    </form>
</div>